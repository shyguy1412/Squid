{
  "name": "squid-ssr",
  "version": "0.0.1",
  "description": "Preact SSR Framework",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "node build.mjs",
    "dev": "node build.mjs --watch",
