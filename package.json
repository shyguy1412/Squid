    "npm",
    "ts",
    "typescript",
    "preact",
    "squid"
  ],
  "peerDependencies": {
    "@types/express": "^4.17.21",
    "express": "^4.18.2",
    "preact": "^10.19.2",
    "preact-render-to-string": "^6.3.1"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "commander": "^11.1.0",
